{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "typeRoots": ["@types"],
      "allowJs": true,
      "checkJs": false,
      "outDir": ".dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true
    },
    "exclude": ["node_modules"]
  }
  